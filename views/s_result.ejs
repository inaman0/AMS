<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Results</title>
    <link rel="stylesheet" href="s_result.css"> <!-- Link to external CSS -->
</head>
<body class="container">
    <h1 class="heading">Your Result</h1>

    <% if (results.length === 0) { %>
        <p class="no-results">No results found for this student.</p>
    <% } else { %>
        <table class="results-table">
            <thead>
                <tr>
                    <th>Course Name</th>
                    <th>Grade</th>
                </tr>
            </thead>
            <tbody>
                <% results.forEach(result => { %>
                    <tr>
                        <td><%= result.course_name %></td>
                        <td><%= result.grade %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } %>

    <a href="/s_home" class="back-link">Back to Homepage</a>
</body>
</html>
