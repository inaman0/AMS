<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Course Registration History</title>
</head>
<body>
    <h1>Course Registration History</h1>
    <table>
        <thead>
            <tr>
                <th>Course Name</th>
                <th>Course Code </th>
                <th>Credits</th>
            </tr>
        </thead>
        <tbody>
            <% if (history.length > 0) { %>
                <% history.forEach(entry => { %>
                    <tr>
                        <td><%= entry.course_name %></td>
                        <td><%= entry.course_code %></td>
                        <td><%= entry.credits %></td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="3">No registration history found.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
    <a href="/s_home"> Homepage </a>
</body>
</html>
